{
  "name": "gantryland",
  "private": true,
  "type": "module",
  "workspaces": ["packages/*"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joehoot/gantryland.git"
  },
  "bugs": {
    "url": "https://github.com/joehoot/gantryland/issues"
  },
  "homepage": "https://github.com/joehoot/gantryland#readme",
  "scripts": {
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "prepublishOnly": "npm run build",
    "publish": "npm publish --workspaces",
    "release:changeset": "changeset",
    "release:changelog": "changeset version",
    "release:guard:changeset": "changeset status --since main",
    "release:status": "changeset status && npm run release:check",
    "release:check": "npm run build && npm test",
    "release:ready": "npm run release:guard:changeset && npm run release:changelog && npm run release:check",
    "test": "vitest run",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^22.13.0",
    "@types/react": "^18.2.0",
    "jsdom": "^24.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.4",
    "vitest": "^2.1.7"
  }
}
