{
  "name": "gantryland",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "workspaces": ["packages/*"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joehoot/gantryland.git"
  },
  "bugs": {
    "url": "https://github.com/joehoot/gantryland/issues"
  },
  "homepage": "https://github.com/joehoot/gantryland#readme",
  "scripts": {
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc -b --pretty false",
    "typecheck:tests": "tsc -p tsconfig.tests.json --pretty false",
    "prepack": "npm run build",
    "check": "npm run lint && npm run format:check && npm run typecheck && npm run typecheck:tests && npm run build && npm run test",
    "publish:all": "npm run check && npm publish --workspaces --access public",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/react": "^18.3.12",
    "@types/react-test-renderer": "^18.3.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@types/node": "^22.13.0",
    "react": "^18.3.1",
    "react-test-renderer": "^18.3.1",
    "typescript": "^5.5.4",
    "vitest": "^2.1.7"
  }
}
