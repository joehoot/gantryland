{
  "name": "gantryland",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "workspaces": ["packages/*"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joehoot/gantryland.git"
  },
  "bugs": {
    "url": "https://github.com/joehoot/gantryland/issues"
  },
  "homepage": "https://github.com/joehoot/gantryland#readme",
  "scripts": {
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "api:check": "node ./scripts/api-delta.mjs --check",
    "api:update": "node ./scripts/api-delta.mjs --update",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc -b --pretty false",
    "prepack": "npm run build",
    "prepublishOnly": "npm run build",
    "publish:workspaces": "npm publish --workspaces",
    "release:changeset": "changeset",
    "release:changelog": "changeset version",
    "release:guard:changeset": "changeset status --since main",
    "release:status": "changeset status && npm run release:check",
    "release:check": "npm run lint && npm run format:check && npm run typecheck && npm run build && npm run api:check && npm test",
    "release:ready": "npm run release:guard:changeset && npm run release:changelog && npm run release:check",
    "release:publish": "npm run release:check && npm run changeset:publish",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "changeset:publish": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.1",
    "@vitest/coverage-v8": "^2.1.9",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^22.13.0",
    "@types/react": "^18.2.0",
    "jsdom": "^24.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.4",
    "vitest": "^2.1.7"
  }
}
